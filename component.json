{
  "title": "HTTP Reply",
  "description": "Used to reply to HTTP webhooks",
  "actions": {
    "reply": {
      "title": "Reply",
      "main": "./reply.js",
      "service": "request-reply",
      "fields": {
        "customHeaders": {
          "label": "Custom HTTP Headers",
          "required": false,
          "viewClass": "InMetadataExtensionView",
          "placeholder": "Header names separated by comma (e.g Content-Type,Content-Language)",
          "titlePrefix": "Header"
        }
      },
      "metadata": {
        "in": {
          "type": "object",
          "properties": {
            "contentType": {
              "title": "Content Type (default application/json)",
              "type": "string",
              "required": false
            },
            "responseBody": {
              "title": "Response Body",
              "type": "string",
              "required": true,
              "maxLength": 1000
            }
          }
        },
        "out": {}
      }
    }
  }
}
